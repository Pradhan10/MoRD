<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_background"
    tools:alpha="0.83">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="374dp"
        android:layout_height="63dp"
        app:srcCompat="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="384dp"
        android:layout_height="145dp"
        app:srcCompat="@drawable/home_image"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.178"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Department of Rural Development"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toRightOf="parent"/>

    <HorizontalScrollView
        android:layout_width="396dp"
        android:layout_height="77dp"
        android:id="@+id/horizontalScrollView"
        app:layout_constraintLeft_toRightOf="@+id/horizontalScrollView"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintVertical_bias="0.566"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_weight="0.57"
                app:srcCompat="@drawable/img1"/>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.57"
                app:srcCompat="@drawable/ylogo2"/>

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.57"
                app:srcCompat="@drawable/ylogo3"/>

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.57"
                app:srcCompat="@drawable/ylogo4"/>

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.57"
                app:srcCompat="@drawable/ylogo5"/>

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.57"
                app:srcCompat="@drawable/ylogo6"/>

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="275dp"
        android:layout_height="32dp"
        android:layout_weight="0.57"
        android:text="Department of Rural DEvelopment"
        tools:textSize="18sp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="0.686"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginLeft="0dp"/>

    <HorizontalScrollView
        android:layout_width="531dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.856"
        android:id="@+id/horizontalScrollView2"
        app:layout_constraintLeft_toRightOf="@+id/horizontalScrollView2"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toLeftOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/imageButtonDrd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.57"
                app:srcCompat="@drawable/ylogo1"/>

            <ImageButton
                android:id="@+id/imageButtonDrd2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.57"
                app:srcCompat="@drawable/ylogo2"/>

            <ImageButton
                android:id="@+id/imageButtonDrd3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.57"
                app:srcCompat="@drawable/ylogo3"/>

            <ImageButton
                android:id="@+id/imageButtonDrd4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.57"
                app:srcCompat="@drawable/ylogo4"/>

            <ImageButton
                android:id="@+id/imageButtonDrd5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.57"
                app:srcCompat="@drawable/ylogo5"/>

            <ImageButton
                android:id="@+id/imageButtonDrd6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.57"
                app:srcCompat="@drawable/ylogo6"/>

        </LinearLayout>
    </HorizontalScrollView>

</android.support.constraint.ConstraintLayout>